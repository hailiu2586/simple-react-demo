{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}